{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@validators/*": [
        "./src/validators/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
    },
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
